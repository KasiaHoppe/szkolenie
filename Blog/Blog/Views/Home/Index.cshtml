@model IEnumerable<Blog.Models.Wpis>

@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-md-2">
        Kategorie:
    </div>
    <div class="col-md-8">
        @foreach (var wpis in Model)
        {
            // @Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id }, null)

            <div class="article">
                <div class="article-header">
                    <p class="article-title"> @Html.ActionLink(wpis.Tytul, "Details", "Home", new { id = wpis.Id }, null) </p>
                    <p class="article-author">Autor: @wpis.Autor </p>
                </div>
                <div class="article-content">
                    <p> @wpis.Tresc.Substring(0, Math.Min(wpis.Tresc.Length, 100)); <p> @Html.ActionLink("czytaj dalej...", "Details", "Home", new { id = wpis.Id }, null)</p></p>

                </div>

                <div class="article-footer">
                    <p class="article-date">Data dodatnia @wpis.DataDodania</p>
                    <div class="row text-center">
                        <div class="col">
                            <a href="#">Edytuj</a>
                        </div>
                        <div class="col">
                            <a href="#">Usuń</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="col-md-2">
        
    </div>
</div>
